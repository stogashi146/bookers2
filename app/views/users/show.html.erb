<!--
マイページ
-->

<!--プロフィール（部分テンプレート）-->
<%= render "users/userinfo",user:@user %>

<!--投稿フォーム（部分テンプレート）-->
<%= render "books/booksubmit",book:@book %>

<!--自分の投稿一覧-->
  <div>
    <!--見出し-->
    <h1>Books</h1>
    <table>
      <!--テーブルのヘッダー-->
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <!--実データ-->
      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <!--ユーザー詳細にリンク-->
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </td>

            <td>
              <!--タイトルブック詳細にリンク-->
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>

            <td>
              <!--詳細-->
              <%= book.body %>
            </td>

          </tr>
        </tbody>
      <% end %>
    </table>
  </div>