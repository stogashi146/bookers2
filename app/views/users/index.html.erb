<!--
ユーザー一覧ページ
-->

<!--エラーメッセージ-->
<%= render "books/error_message" %>

<!--プロフィール（部分テンプレート）-->
<%= render "users/userinfo",user:@user %>


<!--投稿フォーム（部分テンプレート）-->
<%= render "books/booksubmit",book:@book %>


<!--ユーザー一覧-->
  <div>
    <!--見出し-->
    <h1>Users</h1>
    <table>
      <!--テーブルのヘッダー-->
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <!--実データ-->
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <!--ユーザー画像-->
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            </td>

            <td>
              <!--ユーザー名-->
                <%= user.name %>
            </td>

            <td>
               <%= link_to "Show",user_path(user.id) %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
