<!--
ユーザープロフィール編集
-->

<!--エラーメッセージ-->
<%= render "users/error_message" %>

<h2>User info</h2>
<%= form_with model:@user,local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field:name,autofocus:true,id:"inputName" %>

  <%= attachment_image_tag @user,:profile_image,:fill,60,60,fallback:"no_image.jpg" %>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image,placeholder:"ファイルを選択" %>


  <label for="inputInt">Introduction</label>
  <%= f.text_field:introduction,autofocus:true,id:"inputInt" %>

  <%= f.submit "Update User",class:"text-light btn btn-secondary" %>
<% end %>
