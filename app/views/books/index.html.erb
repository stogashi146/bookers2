<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Option</h4>
 <%= f.text_area :body %>
 <%= f.submit "Create Book" %>
<% end %>

<!--投稿一覧-->
  <div>
    <!--見出し-->
    <h1>Books</h1>
    <table>
      <!--テーブルのヘッダー-->
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <!--実データ-->
      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <!--ユーザー詳細にリンク※要変更（リンク、画像）-->
              <%= link_to root_path do %>
              <%= image_tag("no_image.jpg") %>
              <% end %>
            </td>

            <td>
              <!--ブック詳細にリンク-->
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>

            <td><%= book.body %></td>

          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
