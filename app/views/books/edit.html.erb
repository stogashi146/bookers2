<!--エラーメッセージ-->
<%= render "books/error_message" %>

<h1>Editing Book</h1>
<%= form_with model: @book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Option</h4>
 <%= f.text_area :body %>
 <%= f.submit "Update Book" %>
  <% if @book.user == current_user %>
    <%= link_to "Show",book_path(@book) %>
    <%= link_to "Back",books_path %>
  <% end %>
<% end %>

